<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".PreviewActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#FFF8EB"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/text_view_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="13sp"
            tools:text="This is a message view Where the app will be showing message from the from. Something something something something something something something something something something anything anything anything" />
    </androidx.cardview.widget.CardView>
    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/button_send_message"
        android:background="@color/material_dynamic_neutral50"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:text="SEND MESSAGE"/>

</LinearLayout>